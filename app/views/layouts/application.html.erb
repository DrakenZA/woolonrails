<!DOCTYPE html>
<html>

<head>

  <title>Wool</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="apple-mobile-web-app-capable" content="yes">

  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- <%=subscribe_to "/test"%> -->

</head>

<body>





  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">Wool</a>
        <ul class="nav navbar-nav">

      </ul>
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">
            <li><%=link_to("List all entries",{ :action => "listall"},{ :remote => true,:method => :get, :class => ""}) %> </li>
          <li><a href="#" onclick="javascript:$('#addwoolmodal').modal('show');">Add new Wool pickup Entry</a></li>
        </ul>

          <%= form_tag({action: "searchmap"}, {class: "navbar-form navbar-right",remote: true}) do %>

        <%= text_field_tag 'searchinput', '', class: "form-control",placeholder: "Search.." %>
        <%= submit_tag "Send", 'data-disable-with' => 'Sending', class: 'btn btn-primary' %>


        <%end%>
      </div>
    </div>
  </nav>


